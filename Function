def gooday (name, ending= "thank you"):

    print("gooday", name)
    print(ending)

gooday("harry", "thanks")
gooday("sohan")
---------------------------------------------------------------xxxxxxxxxx----------------------------------
def factorial(n):
    if (n==1 or n==0):
        return 1
    return n * factorial (n-1)
n = int(input("enter the number : "))
print(f"this is factorial of no {factorial (n)}")
