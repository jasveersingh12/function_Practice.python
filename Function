a = int(input("enter your number: "))
b = int(input("enter your number: "))
c = int(input("enter your number: "))
    
avg = ( a + b + c)/3 # this is function defination
print(avg)

def avg():
    a = int(input("enter your number: "))
    b = int(input("enter your number: "))
    c = int(input("enter your number: "))
    
    avg = ( a + b + c)/3
    print(avg)

avg() # this is function call 
avg()
avg()
avg()
avg() # you can count 5 time avg with this concept
